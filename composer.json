{
    "name": "kalnoy/cruddy",
    "description": "Cruddy -- backend CRUD interface",
    "authors": [
        {
            "name": "Aleksander Kalnoy",
            "email": "lazychaser@gmail.com"
        }
    ],

    "require": {
        "php": ">=5.4.0",
        "laravel/framework": "4.1.*",
        "cartalyst/sentry": "2.0.*",
        "intervention/image": "dev-master",
        "intervention/imagecache": "dev-master"
    },

    "autoload": {
        "classmap": [
            "app/commands",
            "app/controllers",
            "app/models",
            "app/tests",
            "app/database/migrations",
            "app/database/seeds",

            "src/controllers",
            "src/exceptions.php"
        ],

        "psr-0": {
            "Kalnoy\\Cruddy\\": "src/",
            "App": "app/lib"
        },

        "files": [
            "src/helpers.php"
        ]
    },

    "minimum-stability": "dev",
    "require-dev": {
        "fzaninotto/faker": "dev-master",
        "mockery/mockery": "dev-master"
    }
}
